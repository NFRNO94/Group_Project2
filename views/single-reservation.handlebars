<div id="single-reservation">
    <div class="container vertical-center">

        <div class="row" style="width: 100%;">
            <div class="col-12">
                <!-- Pass in data from server.js -->

                <ul>
                    {{#each reservations}}
                    <li>
                        <p><span class="label">ID:</span> {{this.id}}</p>

                        <button data-id ="{{this.id}}" class="cancel-reservation">Cancel Reservation</button>

                        <a href="/{{this.id}}">Update This Reservation</a>
                    </li>
                    {{/each}}
                </ul>

            </div>
        </div>
    </div>
</div>
<div id="update-flavors">
    <div class="container vertical-center fade-in-fwd">

        <div class="row" style="width: 100%;">
            <div class="col-12">

                <div class="card mx-auto mt-4">
                    <div class="card-body">
                        <h2 class="card-title text-center">Flavors</h2>

                        <form class="add-flavor float-right">

                            <div class="form-group mb-5">
                                <label for="flavor-name" style="color: orangered; font-size: 28px;">Flavor Name:</label>
                                <input type="text" class="form-control" id="flavor-name" aria-describedby="flavor-name"
                                    placeholder="Luscious Lemon">
                            </div>

                            <div class="form-group mb-5">
                                <label for="category" style="color: orangered; font-size: 30px;">Flavor
                                    Category:</label>
                                <input type="text" class="form-control" id="category" aria-describedby="category"
                                    placeholder="Fruit">
                            </div>

                            <div class="form-group mb-5">
                                <label for="description" style="color: orangered; font-size: 30px;">Flavor
                                    Description:</label>
                                <input type="text" class="form-control" id="description" aria-describedby="description"
                                    placeholder="Fruity bliss">
                            </div>

                            <div class="form-group mb-5">
                                <label for="quantity" style="color: orangered; font-size: 30px;">Flavor
                                    Quantity:</label>
                                <input type="number" class="form-control" id="quantity" aria-describedby="quantity"
                                    placeholder="30">
                            </div>
                            <button id="addFlavor" type="submit" class="btn btn-dark mt-1">Add Flavor</button>

                        </form>

                        <ul>
                            {{#each hookahFlavorsList}}
                            {{> flavors/flavor-block}}
                            {{/each}}

                        </ul>

                        <a href="/">‚Üê Back To Home</a>

                    </div>
                </div>



            </div>

        </div>



    </div>

</div>